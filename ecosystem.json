{
	"apps": [{
		"name"      : "watch-2",
		"script"    : "./server/main.js",
		"instances" : 1,
		"exec_mode" : "cluster"
	}],
	"deploy": {
		"production": {
			"user": "ubuntu",
			"host": ["auth.luckydye.de"],
			"ref" : "origin/master",
			"repo": "git@github.com:luckydye/watch-2.git",
			"path": "/srv/watch-2",
			"post-deploy": "npm install --no-save; npm run build; npm start",
			"env"  : {
				"PORT": "8081"
			}
		}
	}
}